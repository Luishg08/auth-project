generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id                           String      @id @default(auto()) @map("_id") @db.ObjectId //De esta forma se crea un id en mongo
  fullname                     String
  email                        String      @unique
  current_password             String
  rol                          Role        @default(GERENTE)
  status                       Status      @default(PENDING)
  phone                        String      @unique
  verificationCodePhone        String?
  verificationCodePhoneExpires DateTime?
  verificationCode             String?
  verificationCodeExpires      DateTime?
  createdAt                    DateTime    @default(now())
  updatedAt                    DateTime    @updatedAt
  warehouses                   Warehouse[]
}

model Department {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  cities    City[]   @relation("DepartmentCities")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model City {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String     @unique
  department   Department @relation("DepartmentCities", fields: [departmentId], references: [id])
  departmentId String     @db.ObjectId
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Address {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  street     String
  city       String
  state      String
  country    String
  postalCode String
  latitude   Float
  longitude  Float
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  warehouse  Warehouse?
}

model Warehouse {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  warehouseId String          @unique
  name        String
  capacity    Float
  status      WarehouseStatus
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  managerId   String          @db.ObjectId
  manager     Users           @relation(fields: [managerId], references: [id])
  addressId   String          @unique @db.ObjectId
  address     Address         @relation(fields: [addressId], references: [id])
}

enum Role {
  SUPERADMIN
  EDITOR
  GERENTE
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING
}

enum WarehouseStatus {
  ACTIVE
  INACTIVE
}
